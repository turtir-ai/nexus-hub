{
  "description": "NEXUS memory hooks: keep memory_bank compact + searchable (capture tool failures + rotate on SessionEnd)",
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/nexus_mem.py remember-hook --no-rebuild >/dev/null 2>&1 || true"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/nexus_mem.py rotate >/dev/null 2>&1 || true"
          }
        ]
      }
    ]
  }
}
